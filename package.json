{
  "name": "labsui-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/showcase",
    "build": "npm run build --workspace=packages/labsui",
    "build:all": "npm run build --workspace=packages/labsui && npm run build --workspace=apps/showcase",
    "pack:labsui": "npm pack --workspace=packages/labsui",
    "publish:labsui": "npm publish --workspace=packages/labsui",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,css,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0"
  }
}
